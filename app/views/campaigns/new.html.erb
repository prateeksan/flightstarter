<h1>New Campaign</h1>
<%= form_for @campaign do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :requisite_funding %>
    <%= f.number_field :requisite_funding, min: 0, step: 10 %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
